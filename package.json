{
  "name": "insta-clone",
  "description": "An instagram clone",
  "version": "0.0.0",
  "type": "module",
  "main": "src/main/server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otaviotech/insta-clone.git"
  },
  "keywords": [],
  "author": "Otávio Araújo <otaviotech@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otaviotech/insta-clone/issues"
  },
  "homepage": "https://github.com/otaviotech/insta-clone#readme",
  "scripts": {
    "format": "prettier --write . --loglevel=warn && prisma format",
    "lint:js": "eslint --fix --ext .js .",
    "lint:docs": "openapi lint openapi.yaml",
    "lint": "npm run lint:js && npm run lint:docs",
    "build:docs": "redoc-cli bundle openapi.yaml --cdn -o ./public/spec.html",
    "build": "npm run build:docs",
    "dev": "nodemon --es-module-specifier-resolution=node ./src/main/server/index.js",
    "start": "node --es-module-specifier-resolution=node ./src/main/server/index.js",
    "prepare": "husky install",
    "test": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest --",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest .test.js --",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest --runInBand --verbose -- ./test/integration/run.spec.js",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest --runInBand -- --coverage",
    "migrate": "prisma migrate deploy",
    "reset-test-db": "dotenv -e .env.test -- prisma migrate reset --force",
    "sentry": "node --es-module-specifier-resolution=node ./scripts/sentry.js"
  },
  "devDependencies": {
    "@jest/globals": "^27.4.6",
    "@redocly/openapi-cli": "^1.0.0-beta.78",
    "@types/jest": "^27.4.0",
    "@types/ramda": "^0.27.62",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "read-package-json": "^4.1.1",
    "redoc-cli": "^0.13.2",
    "shelljs": "^0.8.5",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "awilix": "^6.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "express-ruid": "^1.1.4",
    "helmet": "^5.0.1",
    "ioredis": "^4.28.2",
    "jsonwebtoken": "^8.5.1",
    "pino": "^7.6.2",
    "pino-http": "^6.5.0",
    "pino-pretty": "^7.3.0",
    "pino-sentry": "^0.11.0",
    "prisma": "^3.7.0",
    "ramda": "^0.27.1",
    "yup": "^0.32.11"
  },
  "prisma": {
    "schema": "src/infra/db/postgres/prisma/schema.prisma"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write --ignore-unknown --loglevel=warn"
    ],
    "**/*.json": [
      "prettier --write --ignore-unknown --loglevel=warn"
    ]
  }
}
